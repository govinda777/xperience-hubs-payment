# NPM Configuration for Xperience Hubs Payment
# Public repository configuration

# Registry configuration
registry=https://registry.npmjs.org/

# Package configuration
package-name=@xperience-hubs/payment
package-version=1.0.0
package-description="Xperience Hubs Payment - Blockchain-powered payment platform with NFT integration"
package-keywords=blockchain,nft,pix,payment,smart-contracts,ethereum,privy,nextjs
package-author="Xperience Hubs Team"
package-license=MIT
package-repository=git+https://github.com/govinda777/xperience-hubs-payment.git
package-homepage=https://github.com/govinda777/xperience-hubs-payment
package-bugs=https://github.com/govinda777/xperience-hubs-payment/issues
package-main=dist/index.js
package-types=dist/index.d.ts
package-files=["dist/**/*", "README.md", "LICENSE"]

# Access configuration (for scoped packages)
access=public

# Publishing configuration
tag=latest

# Security configuration
audit-level=moderate
fund=false

# Development configuration
save-exact=true
save-prefix=""

# Workspace configuration (if using monorepo)
workspaces=["packages/*"]

# Scripts configuration
scripts-prepend-node-path=true

# Cache configuration
cache=~/.npm
cache-min=3600

# Network configuration
fetch-retries=3
fetch-retry-factor=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Logging configuration
loglevel=notice
progress=true

# Git configuration
git-checks=true

# Security and audit
audit=true
fund=false

# Package lock configuration
package-lock=true
package-lock-only=false

# Optional dependencies
optional=true

# Peer dependencies
legacy-peer-deps=false

# Engine configuration
engine-strict=true

# Resolution configuration
resolution-mode=highest

# Workspace configuration
workspace-concurrency=4 